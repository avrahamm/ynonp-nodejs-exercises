<!DOCTYPE html>
<html lang="en">

<head>
    <title>Edit Post Form</title>
</head>

<body>

        <% if (post.errors) { %>
            <h2>Errors found in form</h2>
            <ul>
                <% for (let msg of Object.values(post.errors)) { %>
                    <li><%= msg %></li>
                <% } %>
            </ul>
        <% } %>
    

    <form action="/posts" method="POST">
        <div>
            <label>
                Author:
                <input type="text" name="author" readonly
                       value="<%= post.author.name %>"/>
            </label>
        </div>
        <div>
            <label>
                Text:
                <textarea name="text"><%= post.text %></textarea>
            </label>
        </div>

        <div>
            <label>
                Color:
                <input type="color" name="color" value="<%= post.color %>" />
            </label>
        </div>
        <div>
            <label>
                Topics - separated by comma:
                <input type="text" name="topics" value=""/>
            </label>
        </div>
        <input type="submit" value="Post" />
    </form>
</body>

</html>
